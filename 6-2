#include <stdio.h>

int main() {
    int num;

    printf("Enter an integer: ");
    scanf("%d", &num);

    if (num >= 0) {
        if (num == 0)
            printf("\nThe number is Zero\n");
        else
            printf("\nThe number is Positive\n");
    } else {
        printf("\nThe number is Negative\n");
    }

    return 0;
}
