#include <stdio.h>

int main() {
    int days;
    int fine = 0;

    printf("Enter number of late days: ");
    scanf("%d", &days);

    if (days <= 5 && days > 0) {
        fine = days * 2;
        printf("\nFine = ₹%d\n", fine);
    }
    else if (days <= 10) {
        fine = (5 * 2) + ((days - 5) * 4);
        printf("\nFine = ₹%d\n", fine);
    }
    else if (days <= 30) {
        fine = (5 * 2) + (5 * 4) + ((days - 10) * 6);
        printf("\nFine = ₹%d\n", fine);
    }
    else if (days > 30) {
        printf("\nMembership Cancelled\n");
    }
    else {
        printf("\nInvalid Input\n");
    }

    return 0;
}
