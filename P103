#include <stdio.h>

int main() {
    int n;
    scanf("%d", &n);
    int arr[n];
    for(int i=0;i<n;i++) scanf("%d",&arr[i]);

    int total = 0;
    for(int i=0;i<n;i++) total += arr[i];

    int leftsum = 0, pivot = -1;
    for(int i=0;i<n;i++){
        if(leftsum == total - leftsum - arr[i]){
            pivot = i;
            break;
        }
        leftsum += arr[i];
    }

    printf("%d\n", pivot);
    return 0;
}
