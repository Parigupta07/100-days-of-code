#include <stdio.h>
int main(){
    int n,k; scanf("%d %d",&n,&k); int arr[n];
    for(int i=0;i<n;i++) scanf("%d",&arr[i]);
    int maxsum=0;
    for(int i=0;i<k;i++) maxsum+=arr[i];
    int curr=maxsum;
    for(int i=k;i<n;i++){
        curr=curr-arr[i-k]+arr[i];
        if(curr>maxsum) maxsum=curr;
    }
    printf("%d\n",maxsum);
    return 0;
}
