#include <stdio.h>
#include <string.h>
int main(){
    char s[1000]; fgets(s,sizeof(s),stdin);
    int len=strlen(s); if(s[len-1]=='\n') s[--len]=0;
    int maxl=0;
    for(int i=0;i<len;i++){
        int cnt[256]={0},l=0;
        for(int j=i;j<len;j++){
            if(cnt[s[j]]) break;
            cnt[s[j]]++; l++;
        }
        if(l>maxl) maxl=l;
    }
    printf("%d\n",maxl);
    return 0;
}
